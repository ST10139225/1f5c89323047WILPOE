@using Microsoft.AspNetCore.Identity
@model KNN.Models.VideoResultModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YouTube Videos - D.E.W. Radio Station</title>
    <style>
        .video-item:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
   
    <main class="container flex-grow-1">
        <h1 class="mb-4">D.E.W. Radio Station YouTube Videos</h1>

        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="ratio ratio-16x9 mb-3">
                    <iframe id="videoPlayer" src="https://www.youtube.com/embed/PlqJBPw-M-8?si=iLxfzK9BLppHoxOe" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
                <h2 id="videoTitle" class="h4">Community Spotlight: Local Heroes</h2>
                <p id="videoDescription" class="text-muted">Join us as we highlight the incredible work of local heroes in our community, making a difference every day.</p>
            </div>
            <div class="col-lg-4">
                    <h3 class="h5 mb-3">More Videos</h3>
                    <div id="videoList" class="list-group">
                        @if(Model.Videos.Count()>=1)
                        @foreach (var video in Model.Videos)
                        {
                            <a href="#" class="list-group-item list-group-item-action video-item" data-video-id="@video.Id">
                                <div class="d-flex w-130 justify-content-between">
                                    <h5 class="mb-1">@video.Title</h5>
                                </div>
                                    <a class="mb-1" href="@video.Link">Watch now</a>
                                <small class="text-muted">@video.PublishedDate</small>
                            </a>
                        }
                    </div>
                <nav aria-label="Video page navigation" class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>