@{
    ViewData["Title"] = "Home Page";
}

<!-- Main Content -->
<main class="container flex-grow-1">
    <section class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 mb-3">Welcome to D.E.W Community Podcast</h1>
            <p class="lead mb-4">Discover. Engage. Wonder. Join our community of curious minds.</p>
            <a href="https://www.youtube.com/watch?v=RmBPsVDemJQ" class="btn btn-primary btn-lg">Listen Now</a>
        </div>
        <div class="col-md-6">
            <img src="@Url.Content("~/pictures/Communitypic.jpg")" alt="Podcast illustration" class="img-fluid">
        </div>
    </section>

     

    <section id="about" class="row mb-5">
        <div class="col-md-6">
            <h2>About D.E.W Podcast Community</h2>
            <p>
                This D.E.W Podcast Community is all about fostering curiosity and engagement.
                We bring you fascinating conversations with experts, thinkers, and doers from various fields.
                Our goal is to inspire wonder and promote lifelong learning.
            </p>
            <a href="https://www.youtube.com/watch?v=RmBPsVDemJQ" class="btn btn-secondary">Learn More</a>
        </div>
        <div class="col-md-6">
            <img src="/placeholder.svg?height=300&width=400&text=About Us" alt="About us" class="img-fluid">
        </div>
    </section>
</main>